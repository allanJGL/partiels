{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h1>Hello {{ app.user.email }}!</h1>
            <h2>Roles:
                {% for role in app.user.roles %}
                    {{ role }}
                {% endfor %}
            </h2>
        {% endif %}
        <hr>

        {% for row in posts %}
            <h3>{{ row.title }}</h3>
            {{ row.content|raw }}
            Doc: <a href="{{ asset('uploads/documents/' ~ row.documentName) }}" target=_blank>{{ row.documentName }}</a>
            <p>by: {{ row.user.email }}</p>
        {% endfor %}

    </div>
{% endblock %}
