{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ app.user.email }}!</h1>
        <h2>Roles:
            {% for role in app.user.roles %}
                {{ role }}
            {% endfor %}
        </h2>

        <hr>

        {% for row in posts %}
            <h3>{{ row.title }}</h3>
            {{ row.content|raw }}
            <p>by: {{ row.user.email }}</p>
        {% endfor %}

    </div>
{% endblock %}
