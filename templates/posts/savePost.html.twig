{% extends 'base.html.twig' %}

{% block title %}Hello PostsController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="col-sm-8 mx-auto">
            <h1>Save a Post</h1>

            {{ form_start(postForm) }}

            {{ form_row(postForm.title) }}
            {{ form_row(postForm.content) }}

            <div class="row">
                <button class="btn btn-primary mx-auto">Save</button>
            </div>

            {{ form_end(postForm) }}
        </div>
    </div>
{% endblock %}
